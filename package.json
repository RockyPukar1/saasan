{
  "name": "saasan",
  "version": "1.0.0",
  "description": "Saasan - Anti-corruption platform for Nepal with viral features",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd saasan-be-nest && npm install && cd ../saasan-dashboard-react && npm install && cd ../saasan-mobile-rn && npm install",
    "setup": "npm run install:all && npm run setup:env && npm run seed:smart",
    "seed:smart": "node scripts/setup-database.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:dashboard\" \"npm run dev:mobile\"",
    "dev:backend": "cd saasan-be-nest && pnpm run start:dev",
    "dev:dashboard": "cd saasan-dashboard-react && pnpm run dev",
    "dev:mobile": "cd saasan-mobile-rn && pnpm run dev"
  },
  "keywords": [
    "nepal",
    "anti-corruption",
    "transparency",
    "democracy",
    "citizen-engagement",
    "react-native",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "Saasan Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/saasan.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/saasan/issues"
  },
  "homepage": "https://github.com/your-username/saasan#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3"
  }
}
